<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".services.CleaningService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bathroomcleaningbutton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/electrician"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Bathroom Deep Cleaning"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Kitchendeepcleaningbutton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/plumber"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Deep Kitchen cleaning"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/housecleaningbutton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/carpenters"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Complete house cleaning"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/carcleaningbutton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/carpenters"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Car Washing and Cleaning"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/banner_housepainter"/>
    </LinearLayout>

</ScrollView>